<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dvdloc_verstraete.Video_view">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Auteur_Musique"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/play"
        app:backgroundTint="#FF0000" />

    <TextView
        android:id="@+id/Titre_Musique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtubePlay"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="Titre Musique"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Auteur_Musique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Titre_Musique"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5sp"
        android:layout_marginEnd="5dp"
        android:text="Auteur Musique"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>